{
  "name": "utf8decoder-verilog",
  "license": "MIT-0",
  "repository": "github:chykon/utf8decoder-verilog",
  "version": "0.1.0-prototype.1",

  "scripts": {
    "precompile": "mkdir -p build/iverilog",
    "compile": "cd src && iverilog -gspecify -gstrict-ca-eval -gstrict-expr-width -gno-shared-loop-index -Wall -o../build/iverilog/main.vvp main.v",
    "simulate": "vvp build/iverilog/main.vvp",
    "go": "npm run precompile && npm run compile && npm run simulate"
  }
}
